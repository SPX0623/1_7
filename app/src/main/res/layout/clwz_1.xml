<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="700dp"
            android:layout_height="300dp">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linear_wzsp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:onClick="qh"
                        android:id="@+id/tv_sp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        android:background="#C3D5CF"
                        android:text="违章视频"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_wztp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_tp"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="违章图片"
                        android:textColor="#000000"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_1"
                    android:onClick="onclick"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/weizhang2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/iv_2"
                    android:onClick="onclick"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/weizhang6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/iv_3"
                    android:onClick="onclick"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/weizhang7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:id="@+id/iv_4"
                    android:onClick="onclick"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/weizhang8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>